# Pulsar Configuration
# The following are standard variables provided by services like Clever Cloud.
# This application primarily uses ADDON_PULSAR_BINARY_URL, ADDON_PULSAR_TENANT, 
# ADDON_PULSAR_NAMESPACE, and ADDON_PULSAR_TOKEN.

# The full Pulsar connection URL (binary protocol).
ADDON_PULSAR_BINARY_URL="pulsar://localhost:6650"
# The port for the binary protocol.
ADDON_PULSAR_BINARY_PORT="6650"

# The full Pulsar connection URL (HTTP protocol).
ADDON_PULSAR_HTTP_URL="http://localhost:8080"
# The port for the HTTP protocol.
ADDON_PULSAR_HTTP_PORT="8080"

# The hostname of the Pulsar broker.
ADDON_PULSAR_HOSTNAME="localhost"

# The Pulsar tenant to use.
ADDON_PULSAR_TENANT="public"

# The Pulsar namespace to use.
ADDON_PULSAR_NAMESPACE="default"

# The authentication token for Pulsar. Leave empty if no authentication is required.
ADDON_PULSAR_TOKEN=""

# Yjs-specific Pulsar Topics
# Prefix for topics that hold document updates. The full topic name will be {PULSAR_TOPIC_PREFIX}{document-name}.
PULSAR_TOPIC_PREFIX="yjs-doc-"

# S3 Storage Configuration
# The name of the S3 bucket to use for storing document snapshots.
S3_BUCKET="yjs-snapshots"

# The endpoint URL for the S3-compatible storage service.
# For AWS S3, this would be something like https://s3.us-east-1.amazonaws.com
# For local development with MinIO, this would be http://localhost:9000
S3_ENDPOINT="http://localhost:9000"

# The access key ID for your S3-compatible storage.
S3_ACCESS_KEY_ID=""

# The secret access key for your S3-compatible storage.
S3_SECRET_ACCESS_KEY=""

# The AWS region. This is required even for S3-compatible services.
AWS_REGION="us-east-1"
